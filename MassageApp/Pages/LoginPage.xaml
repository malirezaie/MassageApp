<?xml version="1.0" encoding="UTF-8"?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms" 
		xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml" 
		x:Class="MassageApp.LoginPage"
		NavigationPage.HasNavigationBar="false">
	
	<Grid RowSpacing="0">
    <Grid.RowDefinitions>
      <RowDefinition Height="*" />
      <RowDefinition Height="*" />
    </Grid.RowDefinitions>

    <Grid Grid.Row="0" Padding="10,30,10,30" BackgroundColor="#8C0A4B" >
      <!--<Image VerticalOptions="End" Source="logotext.png"/>-->
    </Grid>

    <!--Settings-->
    <Grid Grid.Row="1" VerticalOptions="Start" HorizontalOptions="CenterAndExpand">
      <StackLayout Orientation="Vertical" Padding="10">
        <Button TextColor="White" Text="Login with Facebook" Clicked="OnFBLoginClicked" Margin="10" BorderRadius="50" BackgroundColor= "#3b5998"/>
        <Button TextColor="White" Text="Login with Google" Clicked="OnGoogLoginClicked" Margin="10" BorderRadius="50" BackgroundColor= "#d50f25"/>
        </StackLayout>
    </Grid>
  </Grid>
	
</ContentPage>
